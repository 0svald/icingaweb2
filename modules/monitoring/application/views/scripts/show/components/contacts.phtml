<?php
$contacts = array();
foreach ($object->contacts as $contact) {
    $contacts[] = '<a href="'
        . $this->href(
            'monitoring/show/contact',
            array(
                'contact_name' => $contact->contact_name
            )
        )
        . '">'
        . $contact->contact_alias
        . '</a>';
}
?>
<div>
    <div class="panel-heading">
        <div class="panel-hostname">
            Contacts
        </div>
    </div>

    <hr class="separator" />

    <div class="panel-body">
        <?php if (!count($contacts)): ?>
            No Contacts
        <?php else: ?>
            <?= implode(', ', $contacts); ?>
        <?php endif; ?>
    </div>
</div>

