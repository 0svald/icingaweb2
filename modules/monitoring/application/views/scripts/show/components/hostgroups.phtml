<?php

if (empty($object->hostgroups)) return;

$list = array();
foreach ($object->hostgroups as $name => $alias) {
    $list[] = '<a href="' . $this->href('monitoring/list/host', array('hostgroups' => $name)) . '">'
              . $alias
              . '</a>';
}
echo '<b>Hostgroups:</b> ' .  implode(', ', $list) . "<br />\n";

